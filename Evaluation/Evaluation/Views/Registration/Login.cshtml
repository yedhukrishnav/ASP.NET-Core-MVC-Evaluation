@model LoginViewModels

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h3 class="card-title text-center mb-4">Login</h3>
    <form method="post">
        <div class="mb-3">
            <label asp-for="email" class="form-label">Email</label>
            <input asp-for="email" class="form-control" placeholder="Enter your email" />
            <span asp-validation-for="email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="password" class="form-label">Password</label>
            <input asp-for="password" type="password" class="form-control" placeholder="Enter your password" />
            <span asp-validation-for="password" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100" asp-controller="Registration" asp-action="Login">Login</button>
        
        <p class="mt-3 text-center">
            Don't have an account? &nbsp<a class="btn btn-danger" asp-controller="Registration" asp-action="Register">Register</a>
        </p>
    </form>
</div>
